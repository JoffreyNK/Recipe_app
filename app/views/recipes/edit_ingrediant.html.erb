<%= form_with url: "/recipes/update_recipe_food", method: :post do |form| %>
  <%= form.label :food_id, "Select the food you add" %>
  <%= form.select :food_id, @foods.map { |t| [t.name, t.id]} %> </br>
  <%= form.label :quantity, "enter number of items" %>
  <%= form.number_field :quantity, :value=>@editable_recipe_food.quantity %> </br>
  <%= form.hidden_field :recipe_id, value: @recipe_id  %>
  <%= form.submit "Add Recipe Food" %>
<% end %>